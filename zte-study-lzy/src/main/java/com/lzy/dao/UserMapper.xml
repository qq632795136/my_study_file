<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.lzy.dao.UserDao">

    <select id="getUserList" resultType="com.lzy.pojo.User">
        select * from test.user
    </select>
    <select id="getUserById" resultType="com.lzy.pojo.User" parameterType="int">
        select *from test.user where id = #{id}
    </select>
    <insert id="addUser" parameterType="com.lzy.pojo.User">
        insert into test.user (id, name, pwd) values(#{id}, #{name}, #{pwd})
    </insert>

    <update id="updateUser" parameterType="com.lzy.pojo.User">
        update test.user set name = #{name}, pwd = #{pwd} where id = #{id}
    </update>

    <delete id="deleteUser" parameterType="int">
        delete from test.user where id = #{id}
    </delete>
</mapper>